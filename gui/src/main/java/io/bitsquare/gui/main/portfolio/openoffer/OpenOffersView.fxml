<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" fx:controller="io.bitsquare.gui.main.portfolio.openoffer.OpenOffersView"
      spacing="10" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="0.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Offer ID" fx:id="offerIdColumn" minWidth="130" maxWidth="130"/>
            <TableColumn text="Date/Time" fx:id="dateColumn" minWidth="190" maxWidth="190"/>
            <TableColumn text="Amount in BTC (Min.)" fx:id="amountColumn" minWidth="190" maxWidth="190"/>
            <TableColumn text="Price" fx:id="priceColumn" minWidth="200"/>
            <TableColumn text="Amount (Min.)" fx:id="volumeColumn" minWidth="210"/>
            <TableColumn text="Trade type" fx:id="directionColumn" minWidth="100" maxWidth="100"/>
            <TableColumn text="" fx:id="removeItemColumn" minWidth="120" maxWidth="120" sortable="false"/>
        </columns>
    </TableView>

</VBox>