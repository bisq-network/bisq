<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>parent</artifactId>
        <groupId>io.bisq</groupId>
        <version>0.5.3</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>jtorproxy</artifactId>

    <dependencies>
        <dependency>
            <groupId>io.bisq</groupId>
            <artifactId>jsocks</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.bisq</groupId>
            <artifactId>jtorctl</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.3.0</version>
                <executions>
                    <execution>
                        <id>get-windows</id>
                        <!-- the wget goal actually binds itself to this phase by default -->
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>
                                https://github.com/TheTorProject/gettorbrowser/releases/download/v7.0.2/torbrowser-install-7.0.2_en-US.exe
                            </url>
                        </configuration>
                    </execution>
                    <execution>
                        <id>get-windows-asc</id>
                        <!-- the wget goal actually binds itself to this phase by default -->
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>
                                https://github.com/TheTorProject/gettorbrowser/releases/download/v7.0.2/torbrowser-install-7.0.2_en-US.exe.asc
                            </url>
                        </configuration>
                    </execution>
                    <execution>
                        <id>get-macos</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>
                                https://github.com/TheTorProject/gettorbrowser/releases/download/v7.0.2/TorBrowser-7.0.2-osx64_en-US.dmg
                            </url>
                        </configuration>
                    </execution>
                    <execution>
                        <id>get-linux32</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>
                                https://github.com/TheTorProject/gettorbrowser/releases/download/v7.0.2/tor-browser-linux32-7.0.2_en-US.tar.xz
                            </url>
                        </configuration>
                    </execution>
                    <execution>
                        <id>get-linux64</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>
                                https://github.com/TheTorProject/gettorbrowser/releases/download/v7.0.2/tor-browser-linux64-7.0.2_en-US.tar.xz
                            </url>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <dependencies>
                    <!--    Optional:   May want to use more up to date commons compress, add this dependency
                            <dependency>
                                <groupId>org.apache.commons</groupId>
                                <artifactId>commons-compress</artifactId>
                                <version>1.10</version>
                            </dependency> -->
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-compress</artifactId>
                        <version>1.4</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>unpack-linux64</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <tasks>
                                <taskdef resource="org/apache/ant/compress/antlib.xml"
                                         classpathref="maven.plugin.classpath"/>
                                <taskdef resource="org/apache/commons/openpgp/ant/antlib.xml"
                                         uri="antlib:org.apache.commons.openpgp.ant"/>
                                <echo message="unzipping file"/>
                                <exec executable="gpg">
                                    <arg value="--verify ${project.build.directory}/tor-browser-linux64-7.0.2_en-US.asc ${project.build.directory}/tor-browser-linux64-7.0.2_en-US.tar.xz"></arg>
                                </exec>
                                <unxz src="${project.build.directory}/tor-browser-linux64-7.0.2_en-US.tar.xz"
                                      dest="${project.build.directory}/linuxx64.tar"/>
                                <untar src="${project.build.directory}/linuxx64.tar"
                                       dest="${project.build.directory}/linuxx64/"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>